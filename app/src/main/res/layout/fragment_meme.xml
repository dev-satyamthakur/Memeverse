<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".fragments.MemeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/memeAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:overScrollMode="never"
            app:layout_scrollEffect="none"
            app:layout_scrollFlags="scroll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_display_black"
                android:text="Memeverse"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/memeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:listitem="@layout/meme_item"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/meme_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:showAnimationBehavior="outward"
        android:indeterminate="true"
        android:progressTint="@color/black"
        app:indicatorColor="@color/black"
        android:layout_gravity="center"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>